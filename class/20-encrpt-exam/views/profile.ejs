<html lang="en">
  <head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <title>로그인, 회원가입 실습</title>
</head>
  <body>
    <h1>님 프로필 정보</h1>

    <form name="edit-profile">
      <input
        type="text"
        id="userid"
        value="123"
        readonly
      /><br />
      <input type="text" id="name" value="123" /><br />
      <input type="password" id="pw" value="$2b$11$VLpjSLunsu3bHCuGq.rquOtueKXIZn/xi/9J3fhrlav6YxKHAikky" /><br />
      <input type="hidden" id="id" value="11" /><br />
      <button type="button" onclick="edit()">수정</button>
      <button type="button" onclick="destroy()">회원탈퇴</button>
    </form>

    <br />
    <a href="/">홈</a>

    <script>
      function edit() {
        const form = document.forms['edit-profile'];
        axios({
          method: 'PATCH',
          url: '/profile/edit',
          data: {
            id: Number(form.id.value),
            userid: form.userid.value,
            name: form.name.value,
            pw: form.pw.value,
          },
        }).then((res) => {
          if (res.data.result) {
            document.location.reload();
          }
        });
      }

      function destroy() {
        if (!confirm('회원탈퇴 하시겠습니까?')) return;

        axios({
          method: 'DELETE',
          url: '/destroy',
          data: {
            id: Number(document.querySelector('#id').value),
          },
        }).then((res) => {
          if (res.data.result) {
            alert('회원탈퇴 완료되었습니다');
            document.location.href = '/';
          }
        });
      }
    </script>
  </body>
</html>
